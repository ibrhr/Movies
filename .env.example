# =============================================================================
# Movie Recommendation System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# TMDB API Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3

# -----------------------------------------------------------------------------
# OpenRouter API Configuration (REQUIRED for semantic search & embeddings)
# -----------------------------------------------------------------------------
# Get your API key from: https://openrouter.ai/
# Used for generating text embeddings via OpenAI's text-embedding-3-small model
OPENROUTER_API_KEY=your_openrouter_api_key_here

# -----------------------------------------------------------------------------
# Flask Application Settings
# -----------------------------------------------------------------------------
# Secret key for Flask sessions (change in production!)
SECRET_KEY=dev-secret-key-change-in-production

# JWT secret key for API authentication (change in production!)
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Flask environment: development or production
FLASK_ENV=development
FLASK_DEBUG=1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# DEVELOPMENT: SQLite database path
# DATABASE_URL=sqlite:///./data/movies.db

# PRODUCTION: PostgreSQL (recommended for production)
POSTGRES_DB=movies_db
POSTGRES_USER=movies_user
POSTGRES_PASSWORD=your-strong-password-here-change-this
DATABASE_URL=postgresql://movies_user:your-strong-password-here-change-this@db:5432/movies_db

# Database Connection Pool Settings (for production)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# -----------------------------------------------------------------------------
# Recommendation Algorithm Settings
# -----------------------------------------------------------------------------
# Lambda parameter for diversity (0.0 = relevant, 1.0 = diverse)
DEFAULT_LAMBDA=0.7

# Maximum number of recommendations to return
MAX_RECOMMENDATIONS=20

# ProtonMail SMTP Configuration
# --------------------------------------------------------------------
# PAID PLAN (Direct SMTP with App Password/Token) - RECOMMENDED
# Get your app password from: https://account.proton.me/u/0/mail/security
PROTON_SMTP_SERVER=smtp.protonmail.ch
PROTON_SMTP_PORT=587
PROTON_EMAIL=your_email@proton.me
PROTON_PASSWORD=your_app_password_or_smtp_token
PROTON_FROM_EMAIL=your_email@proton.me
PROTON_USE_TLS=true

# FREE PLAN (Using ProtonMail Bridge - requires Bridge app installed)
# PROTON_SMTP_SERVER=127.0.0.1
# PROTON_SMTP_PORT=1025
# PROTON_EMAIL=your_email@proton.me
# PROTON_PASSWORD=your_bridge_generated_password
# PROTON_FROM_EMAIL=your_email@proton.me
# PROTON_USE_TLS=false
